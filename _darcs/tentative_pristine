+    function lookup_nonce($consumer, $token, $nonce, $timestamp) {
+        $n = new Nonce();
+        $n->consumer_key = $consumer->key;
+        $n->tok = $token->key;
+        $n->nonce = $nonce;
+        if ($n->find(TRUE)) {
+            return TRUE;
+        } else {
+            $n->timestamp = $timestamp;
+            $n->created = DB_DataObject_Cast::dateTime();
+            $n->insert();
+            return FALSE;
+        }
+    }
