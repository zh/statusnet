+    function show_profiles($profiles, $type) {
+        switch ($type) {
+         case 'xml':
+            common_element_start('users', array('type' => 'array'));
+            foreach ($profiles as $profile) {
+                $this->show_profile($profile);
+            }
+            common_element_end('users');
+            break;
