+function common_element_start($tag, $attrs=null) {
+    global $xw;
+    $xw->startElement($tag);
+    if (is_array($attrs)) {
+        foreach ($attrs as $name => $value) {
+            $xw->writeAttribute($name, $value);
+        }
+    } else if (is_string($attrs)) {
+        $xw->writeAttribute('class', $attrs);
+    }
